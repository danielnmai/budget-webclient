<div class="container">
  <div class="row">
    <div class="col">
      <h4>Update Budget </h4>
      <%= form_tag "/budgets/#{@budget.id}", method: :patch do %>
        <div class="form-group">
          <%= label_tag :name %>
          <%= text_field_tag :name, @budget.name, class: "form-control" %>
        </div>
        <% @budget.categories.each do |category| %>
        <div class="form-group">
          <%= label_tag :category_name %>
          <%= text_field_tag "category_names[]", category['name'], class: "form-control" %>
        </div>
       <div class="form-group">
         <%= label_tag :category_percent %>
         <%= text_field_tag "category_percent[]", category['percent'], class: "form-control" %> 
       </div>
        
        <% end %>
        <%= submit_tag "Update", class: "mb-2 btn btn-outline-primary" %>
      <% end %>
   
    </div>
    <div class="col">
      
    </div>
  </div>
</div>



