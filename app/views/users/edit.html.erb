<div class="container">
  <div class="row">
    <div class="col">
      <h4 >Update profile </h4>
      <%= form_tag "/users/#{@user.id}", method: :patch do %>
        <div class="form-group">
          <%= label_tag :first_name %>
          <%= text_field_tag :first_name, @user.first_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= label_tag :last_name %>
          <%= text_field_tag :last_name, @user.last_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= label_tag :email %>
          <%= text_field_tag :email, @user.email, class: "form-control" %>
        </div>
        <%= submit_tag "Update", class: "mb-2 btn btn-outline-primary" %>

      <% end %>
    </div>
    <div class="col">
      
    </div>
  </div>
</div>


